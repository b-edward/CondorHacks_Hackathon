<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSaver.Views.ItemsPage"
             Title="My Food"
             xmlns:local="clr-namespace:FoodSaver.ViewModels"  
             xmlns:model="clr-namespace:FoodSaver.Models"  
             x:Name="BrowseItemsPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+ Add item" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>

    <RefreshView x:DataType="local:ItemsViewModel" Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        
        <CollectionView x:Name="ItemsListView" ItemsSource="{Binding Items}" SelectionMode="None">

            <CollectionView.EmptyView > <!--Should not display when items are in the list.--> 
                <StackLayout Padding="10,50,10,0" BackgroundColor="White" >
                    <Label Text="Don't leave food behind!" FontSize="Large" TextColor="Black" HorizontalOptions="CenterAndExpand"/>
                    <Image Source="DontleaveFoodBehind.png" HeightRequest="200" HorizontalOptions="CenterAndExpand"/>
                    
                    <Grid HorizontalOptions="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="Tap " FontSize="Medium" TextColor="Black" />
                        <Label Grid.Row="0" Grid.Column="1" Text="+ Add Item" FontSize="Medium" TextDecorations="Underline" TextColor="Black" />
                        <Label Grid.Row="0" Grid.Column="2" Text= " to add your items." FontSize="Medium" TextColor="Black"/>
                        
                    </Grid>

                </StackLayout> 
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" x:DataType="model:Item">
                        <Label Text="{Binding Food} " 
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                            FontSize="19" 
                            FontAttributes="Bold"
                            TextColor="DarkSlateGray"/>
                        <Label Text="{Binding ExpirationDate}" 
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="19" 
                            TextColor="DarkSlateGray"/>
                        <Label Text="{Binding ExpirationTime}" 
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="19" 
                            TextColor="DarkSlateGray"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                NumberOfTapsRequired="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ItemTapped}"		
                                CommandParameter="{Binding .}">
                            </TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
