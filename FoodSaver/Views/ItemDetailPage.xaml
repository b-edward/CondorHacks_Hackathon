<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSaver.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Food:" FontSize="Large" TextColor="Navy"/>
        <Label Text="{Binding Text}" FontSize="Large"/>
        <Label Text="Expiration Date::" FontSize="Large" TextColor="Navy" />
        <Label Text="{Binding Description}" FontSize="Large"/>
    </StackLayout>
    
</ContentPage>