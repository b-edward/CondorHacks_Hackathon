<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSaver.Views.ItemDetailPage"
             Title="Did you finish this food?">
            

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Food item:" FontSize="Large" FontAttributes="Bold" TextColor="DarkSlateGray"/>
        <Label Text="{Binding Food}" FontSize="Large" TextColor="DarkSlateGray"/>
        <Label Text="Eat by:" FontSize="Large" FontAttributes="Bold" TextColor="DarkSlateGray" />
        <Label Text="{Binding ExpirationDate}" FontSize="Large" TextColor="DarkSlateGray"/>
        
        <!--Delete food from db when item has been eaten-->
        <Button Text="Eaten" Command="{Binding DeleteCommand}"  HorizontalOptions="FillAndExpand"/>
        <!--Delete food from db when item has been eaten; Could include other functionality later on.-->
        <Button Text="Expired" Command="{Binding DeleteCommand}" BackgroundColor="Red" HorizontalOptions="FillAndExpand"/>
    </StackLayout>
    
</ContentPage>